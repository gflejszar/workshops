%h2= "Category #{product.category.name}"
%p
.row
  .col-md-3
    .list-group Products:
    - category.products.each do |p|
      = link_to(p.title, category_product_path(category, p), class: 'list-group-item')
  .col-md-9
    .thumbnail
      %img.img-responsive{:src => "http://placehold.it/800x300"}
      .caption-full
        %h4.pull-right
          %b Price:
          = product.price
        %h4
          %b Title:
          = product.title
        %p
          %b Description:
          = product.description
          %p.pull-right
            %em Avarage rating:
            = product.average_rating
          %p
            %b Category
            = product.category.name
#content{:style => "display: none;", :class => "col-md-9 col-md-offset-3"}
  = render 'reviews/form'
.well.well-sm.col-md-9.col-md-offset-3
  %span.pull-right
    %input#hideshow{:type => "button", :value => "Leave review", :class => 'btn btn-success'}
  %h3 Reviews

  = render reviews

%p
.row.col-md-12
  = link_to 'Edit', edit_category_product_path(category.id, product.id), class: 'btn btn-default'
  \|
  = link_to 'Back', category_path(category), class: 'btn btn-primary'
